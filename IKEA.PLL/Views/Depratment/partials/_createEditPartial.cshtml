			<label class="form-label" asp-for="Code">
				<input asp-for="Code" class="form-control" />
				<span class="text-danger" asp-validation-for="Code"></span>
			</label>
		</div>

		<div class="form-group mb-3">
			<label class="form-label" asp-for="Name">
