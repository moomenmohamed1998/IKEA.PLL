@model CreatedEmployeeDto
@{
	ViewData["Title"] = "Create Employee";
}

<div class="row justify-content-center align-content-center flex-column">

	<h1 class="col-6 my-4">create New  Employee </h1>

	<form asp-action="Create" method="post" class="row col-6">

		<div asp-validation-summary="ModelOnly"></div>


		<div class="form-group col-6">

			<label class="form-label" asp-for="Name">
				<input asp-for="Name" class="form-control" />
				<span class="text-danger" asp-validation-for="Name"></span>
			</label>
		</div>
		<div class="form-group col-6">

			<label class="form-label" asp-for="Email">
				<input asp-for="Email" class="form-control" />
				<span class="text-danger" asp-validation-for="Email"></span>
			</label>
		</div>
		<div class="form-group col-6">

			<label class="form-label" asp-for="Address">
				<input asp-for="Address" class="form-control" />
				<span class="text-danger" asp-validation-for="Address"></span>
			</label>
		</div>
		<div class="form-group col-6">

			<label class="form-label" asp-for="Age">
				<input asp-for="Age" class="form-control" />
				<span class="text-danger" asp-validation-for="Age"></span>
			</label>
		</div>
		<div class="form-group col-6">

			<label class="form-label" asp-for="Salary">
				<input asp-for="Salary" class="form-control" />
				<span class="text-danger" asp-validation-for="Salary"></span>
			</label>
		</div>
		<div class="form-group col-6">

			<label class="form-label" asp-for="PhoneNumper">
				<input asp-for="PhoneNumper" class="form-control" />
				<span class="text-danger" asp-validation-for="PhoneNumper"></span>
			</label>
		</div>

		<div class="form-group col-6">

			<label class="form-label" asp-for="EmployeeType">
				<select asp-for="EmployeeType" asp-items="Html.GetEnumSelectList<EmployeeType>()" class="form-control">
					<option value="null">Choose....</option>
				</select>
			</label>
		</div>

		<div class="form-group col-6">

			@foreach (Gender genderoption in Enum.GetValues(typeof(Gender)))
			{
				<div>
					<input type="radio" class="form-chack-input" asp-for="Gender" value="@genderoption" />
					<label class="form-chack-input" asp-for="Gender"> @genderoption </label>
				</div>
			}

		</div>

		<div class="form-group col-6">

			<label class="form-label" asp-for="HiringDate">
				<input asp-for="HiringDate" type="date" class="form-control" />
			</label>
		</div>

		<div class="form-group col-6">
			<div class="form-check"

				<input asp-for="IsActive" type="checkbox" class="form-check-input " />
			<label class="form-check-label" asp-for="IsActive">
			</label>
		</div>


			<div class="mt-4">
				<input type="submit" value="Create" class="btn btn-primary" />||
				<a asp-action="Index" class="btn btn-secondary">Back To List</a>
			</div>
	</form>


</div>

@section ValidationScripts {
	<partial name="_ValidationScriptsPartial" />
}
